<?xml version="1.0" encoding="utf-8"?>
<com.google.android.gms.ads.nativead.NativeAdView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/native_ad_card_padding"
    tools:targetApi="31">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/native_ad_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/native_ad_icon_background"
            android:paddingStart="@dimen/native_ad_card_label_horizontal_padding"
            android:paddingTop="@dimen/native_ad_card_label_vertical_padding"
            android:paddingEnd="@dimen/native_ad_card_label_horizontal_padding"
            android:paddingBottom="@dimen/native_ad_card_label_vertical_padding"
            android:text="â— Sponsored"
            android:textAllCaps="true"
            android:textAppearance="@style/TextAppearance.Material3.LabelSmall"
            android:textColor="?attr/colorPrimary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.gms.ads.nativead.MediaView
            android:id="@+id/native_ad_media"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/native_ad_card_spacing"
            android:background="@drawable/native_ad_media_background"
            android:clipToOutline="true"
            android:contentDescription="@null"
            android:scaleType="centerCrop"
            app:layout_constraintDimensionRatio="16:9"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/native_ad_label" />

        <TextView
            android:id="@+id/native_ad_headline"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/native_ad_card_spacing"
            android:ellipsize="end"
            android:maxLines="2"
            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
            android:textColor="?attr/colorOnSurface"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/native_ad_media"
            tools:text="Upgrade your Android workflow" />

        <TextView
            android:id="@+id/native_ad_body"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/native_ad_card_small_spacing"
            android:ellipsize="end"
            android:maxLines="3"
            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/native_ad_headline"
            tools:text="Discover curated utilities that keep your device fast and productive." />

        <ImageView
            android:id="@+id/native_ad_icon"
            android:layout_width="@dimen/native_ad_bottom_bar_icon_size"
            android:layout_height="@dimen/native_ad_bottom_bar_icon_size"
            android:layout_marginTop="@dimen/native_ad_card_spacing"
            android:background="@drawable/native_ad_icon_background"
            android:clipToOutline="true"
            android:contentDescription="@null"
            android:scaleType="centerCrop"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/native_ad_call_to_action"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/native_ad_body"
            app:layout_goneMarginTop="@dimen/native_ad_card_spacing"
            tools:src="@drawable/ic_shortcut_settings_foreground" />

        <TextView
            android:id="@+id/native_ad_advertiser"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/native_ad_card_small_spacing"
            android:layout_marginTop="@dimen/native_ad_card_spacing"
            android:ellipsize="end"
            android:maxLines="1"
            android:textAppearance="@style/TextAppearance.Material3.LabelMedium"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/native_ad_call_to_action"
            app:layout_constraintEnd_toStartOf="@id/native_ad_call_to_action"
            app:layout_constraintStart_toEndOf="@id/native_ad_icon"
            app:layout_constraintTop_toBottomOf="@id/native_ad_body"
            app:layout_goneMarginTop="@dimen/native_ad_card_spacing"
            tools:text="Ad" />

        <Button
            android:id="@+id/native_ad_call_to_action"
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/native_ad_card_spacing"
            android:paddingStart="@dimen/native_ad_card_cta_horizontal_padding"
            android:paddingEnd="@dimen/native_ad_card_cta_horizontal_padding"
            android:textAllCaps="false"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/native_ad_body"
            app:layout_goneMarginTop="@dimen/native_ad_card_spacing"
            tools:text="Install" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.gms.ads.nativead.NativeAdView>
