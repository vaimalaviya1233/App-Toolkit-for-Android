<?xml version="1.0" encoding="utf-8"?>
<com.google.android.gms.ads.nativead.NativeAdView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/native_ad_bottom_bar_vertical_padding"
    tools:targetApi="31">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/native_ad_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/native_ad_bottom_bar_horizontal_padding"
            android:paddingStart="@dimen/native_ad_bottom_bar_label_horizontal_padding"
            android:paddingTop="@dimen/native_ad_label_to_content_spacing"
            android:paddingEnd="@dimen/native_ad_bottom_bar_label_horizontal_padding"
            android:paddingBottom="@dimen/native_ad_bottom_bar_label_vertical_padding"
            android:text="â— Sponsored Ad"
            android:textAllCaps="true"
            android:textAppearance="@style/TextAppearance.Material3.LabelSmall"
            android:textColor="?attr/colorPrimary" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/native_ad_bottom_bar_label_vertical_padding"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="@dimen/native_ad_bottom_bar_horizontal_padding"
            android:paddingEnd="@dimen/native_ad_bottom_bar_horizontal_padding">

            <ImageView
                android:id="@+id/native_ad_icon"
                android:layout_width="@dimen/native_ad_card_icon_size"
                android:layout_height="@dimen/native_ad_card_icon_size"
                android:adjustViewBounds="true"
                android:background="@drawable/native_ad_icon_background"
                android:clipToOutline="true"
                android:contentDescription="@null"
                android:scaleType="centerCrop"
                tools:src="@drawable/ic_shortcut_settings_foreground" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/native_ad_bottom_bar_spacing"
                android:layout_marginEnd="@dimen/native_ad_bottom_bar_spacing"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/native_ad_headline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                    android:textColor="?attr/colorPrimary"
                    android:textStyle="bold"
                    tools:text="Discover Awesome Tools" />

                <TextView
                    android:id="@+id/native_ad_body"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/native_ad_bottom_bar_label_vertical_padding"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                    android:textColor="?attr/colorPrimary"
                    tools:text="Boost your productivity with curated utilities." />

                <TextView
                    android:id="@+id/native_ad_advertiser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/native_ad_bottom_bar_label_vertical_padding"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textAppearance="@style/TextAppearance.Material3.LabelSmall"
                    android:textColor="?attr/colorPrimary"
                    android:visibility="gone"
                    tools:text="Advertiser" />
            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/native_ad_call_to_action"
                style="@style/Widget.Material3.Button.OutlinedButton.Icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/native_ad_bottom_bar_spacing"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:paddingStart="@dimen/native_ad_bottom_bar_button_horizontal_padding"
                android:paddingEnd="@dimen/native_ad_bottom_bar_button_horizontal_padding"
                android:textAllCaps="false"
                android:visibility="gone"
                app:icon="@drawable/ic_open_in_new_24"
                app:iconGravity="textStart"
                app:iconPadding="@dimen/native_ad_bottom_bar_label_vertical_padding"
                app:iconTint="?attr/colorPrimary"
                tools:text="Open" />
        </LinearLayout>
    </LinearLayout>
</com.google.android.gms.ads.nativead.NativeAdView>
